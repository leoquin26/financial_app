# Backend Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY server/package*.json ./server/

# Install dependencies
RUN npm install
WORKDIR /app/server
RUN npm install
WORKDIR /app

# Copy server files
COPY server ./server

# Expose port
EXPOSE 5000

# Start the backend
CMD ["npm", "run", "server"]
